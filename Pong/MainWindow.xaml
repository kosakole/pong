<Window x:Class="Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game"
        mc:Ignorable="d"
        Title="Game" Height="704" Width="950"
        Background="{StaticResource BackgroundColor}"
        Foreground="{StaticResource TextColor}"
        KeyDown="Window_KeyDown"
        MinHeight="300"
        MinWidth="300"
        >

    <Viewbox>
        <Grid Margin="0,0,0,31" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TextTime"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="22"
               Margin="10"
               Text="Time: 0s" 
               Foreground="#000000"
               />
            <Border x:Name="GridBorder"
            Grid.Row="1"
            BorderBrush="#b4fc79"
            BorderThickness="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" 
            RenderOptions.EdgeMode="Aliased"
            Margin="20,0,20,20">
            
                <UniformGrid x:Name="GameGrid"
                     Height="545"
                     Width="500"
                     Background="#FFFFFF" 
                     HorizontalAlignment="Center"
                     SnapsToDevicePixels="True"
                     RenderOptions.BitmapScalingMode="HighQuality">

                </UniformGrid>
            </Border>

            <Border x:Name="Overlay"
                Grid.Row="1"
                Background="#b4fc79"
                Width="{Binding Path=ActualWidth, ElementName=GridBorder}"
                Height="{Binding Path=ActualHeight, ElementName=GridBorder}"
                RenderOptions.EdgeMode="Aliased">
                <Grid>
                    <TextBlock x:Name="OverlayTextPNK"
                               Text="PRESS ANY KEY TO START"
                        FontSize="26"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextWrapping="Wrap">   
                    </TextBlock>
                    
                    <TextBlock x:Name="OverlayTextScore"
                        Text=""
                        FontSize="26"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextWrapping="Wrap"/>   
                    
                </Grid>

               
            </Border>

        </Grid>
    </Viewbox>
</Window>
